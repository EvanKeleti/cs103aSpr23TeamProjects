
<h1>Transactions of <%= user.username %></h1>

<div class="row">
    <div class="col">
      <p> Here is your list of Transactions! </p>
    
      <p class="m-2">
        <% if (show=='completed'){%>
          <a class="btn btn-lg btn-primary"
              href="?show=transaction">(Show transactions)</a>
        <% }else {%>
          <a class="btn btn-lg btn-primary"
              href="?show=completed">(Show completed transactions)</a>
        <%}%>
      </p>
      <ul class="list-group">
        <% items.forEach(item => { %>
            <li class="list-group-item">
                <span class="">
                    <% if (item.completed) { %>
                      <a 
                        href="/transaction/uncomplete/<%= item._id %>">
                        <i class="bi bi-check-circle-fill"></i>
                    </a>
                    <% } else {%>
                      <a 
                        href="/transaction/complete/<%= item._id %>">
                        <i class="bi bi-check-circle"></i>
                    </a>
                    <%} %>
                    <a href="/transaction/remove/<%=item._id %>">
                      <i class="bi bi-trash"></i>
                    </a>
                </span>
                <span class="mx-5">
                  <%= item.item %>
                </span>
                <span class="badge rounded-pill bg-danger">
                  <%= item.priority?item.priority:5 %> 
                </span>
                <a 
                   href="/transaction/edit/<%=item._id %>">
                  <i class="bi bi-pencil-square"></i>
              </a>
                  
            </li>
            <br>
        <% }) %>

        <form method="post" action="transaction">
            description: <input type="text" name="description">
            <br>
            category: <input type="text" name="category">
            <br>
            amount: <input type="text" name="amount">
            <br>
            mm/dd/yyy: <input type="text" name="mm/dd/yyyy">
            <br>
            <input type="submit" value="store">
        </form>
      </div>
      <div class="col">
        <h2> Summary of Site Usage</h2>
        <p>
          <a  class="btn btn-lg btn-primary"
              href="/transaction/byUser">Show transaction counts for all users</a></p>
      </div> 
    </div>
</div>